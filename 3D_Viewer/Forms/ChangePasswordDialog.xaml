<Window x:Class="smileUp.Forms.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangePasswordDialog" Height="300" Width="351">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="146,46,0,0" Name="txtOldPassword" VerticalAlignment="Top" Width="159" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="146,75,0,0" Name="txtNewPassword" VerticalAlignment="Top" Width="159" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="146,104,0,0" Name="txtConfirmNewPassword" VerticalAlignment="Top" Width="159" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="25,46,0,0" Name="textBlock1" Text="Old Password" VerticalAlignment="Top" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="25,78,0,0" Name="textBlock2" Text="New Password" VerticalAlignment="Top" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="25,107,0,0" Name="textBlock3" Text="Confirm New Password" VerticalAlignment="Top" />
        <Button Content="Change" Height="23" HorizontalAlignment="Left" Margin="180,157,0,0" Name="btnChange" VerticalAlignment="Top" Width="75" Click="btnChange_Click" />
    </Grid>
</Window>
