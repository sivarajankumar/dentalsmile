<UserControl x:Class="smileUp.NavigationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DockPanel>
    <Border
      DockPanel.Dock="Top"
      Style="{DynamicResource styleContentArea}"
      >
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- AGENT DETAILS HEADER -->
        <Border Grid.Row="0" >
          <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                 <Button Content="New" Padding="8" Name="btnPatientNew" Margin="8,8,8,8" Click="btnPatientNew_Click" />
                 <Button Content="Search" Padding="8" Name="btnPatientSearch" Margin="8,8,8,8" />
            </StackPanel>
          </Grid>
        </Border>
      </Grid>
    </Border>
  </DockPanel>
</UserControl>