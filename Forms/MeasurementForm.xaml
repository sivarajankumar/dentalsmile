<Window x:Class="smileUp.Forms.MeasurementForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MeasurementForm" Height="300" Width="300">
    <Grid>
        <DataGrid AutoGenerateColumns="False" EnableRowVirtualization="false" Height="150" HorizontalAlignment="Left" ItemsSource="{Binding}" Margin="0,70,0,0" Name="resultDataGrid" RowDetailsVisibilityMode="VisibleWhenSelected" VerticalAlignment="Top" Width="300" 
                  SelectedValuePath="Id">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="iddColumn" Binding="{Binding Path=Identity}" Header="Identity" Width="SizeToHeader" IsReadOnly="True" />
                <DataGridTextColumn x:Name="lengthColumn" Binding="{Binding Path=Length}" Header="Length" Width="SizeToHeader" IsReadOnly="True" />
                <DataGridTextColumn x:Name="spointColumn" Binding="{Binding Path=SPoint}" Header="Star Point" Width="SizeToHeader" IsReadOnly="True" />
                <DataGridTextColumn x:Name="epointColumn" Binding="{Binding Path=EPoint}" Header="End Point" Width="SizeToHeader" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="175,226,0,0" Name="saveBtn" VerticalAlignment="Top" Width="75" Click="saveBtn_Click" />
    </Grid>
</Window>
